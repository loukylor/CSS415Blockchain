---
import Header from "../components/Header.astro";
import SideBar from "../components/SideBar.astro";
---

<html>
    <head>
        <meta charset="utf-8">
        <title>Simple Blockchain</title>
    </head>
    <body>
        <Header />
        <div class="main-container">
            <SideBar />
            <div class="main-content-container">
                <main class="main-content">
                    <slot />
                </main>
            </div>
        </div>
    </body>
</html>

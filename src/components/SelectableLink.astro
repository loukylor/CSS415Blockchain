---
interface Props extends astroHTML.JSX.AnchorHTMLAttributes { 
    selectedClass?: string
}

const selectedClass = Astro.props.selectedClass ?? "selected"
if (Astro.props.href && Astro.url.pathname.replaceAll("/", "") === Astro.props.href.replaceAll("/", "")) {
    if (Astro.props.class) {
        Astro.props.class += " " + selectedClass
    } else {
        Astro.props.class = selectedClass
    }
}
---
<a {...Astro.props}>
    <slot />
</a>